{
  "name": "snowify",
  "version": "1.0.3",
  "description": "A Spotify-like desktop music player that streams from free sources",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --linux --win"
  },
  "keywords": [
    "music",
    "player",
    "electron",
    "youtube",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@stef-0012/synclyrics": "^2.5.10",
    "@xhayper/discord-rpc": "^1.3.0",
    "firebase": "^12.9.0",
    "ytmusic-api": "^5.3.1"
  },
  "build": {
    "appId": "com.nyaku.snowify",
    "productName": "Snowify",
    "icon": "assets/logo.png",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Audio",
      "icon": "assets/logo.png",
      "extraResources": [
        {
          "from": "bin/linux",
          "to": "bin/linux",
          "filter": [
            "yt-dlp"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/logo.ico",
      "extraResources": [
        {
          "from": "bin/win",
          "to": "bin/win",
          "filter": [
            "yt-dlp.exe"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/logo.png",
      "category": "public.app-category.music"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  }
}
